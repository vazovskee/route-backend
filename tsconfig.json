{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": ["es6"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "rootDirs": ["src"],
        "typeRoots": ["./node_modules/@types"]
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
